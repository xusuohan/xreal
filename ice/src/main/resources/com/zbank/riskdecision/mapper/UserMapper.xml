<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.zbank.riskdecision.mapper.UserMapper">  
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->  
    <resultMap id="BaseResultMap" type="com.zbank.riskdecision.entity.User">  
        <id column="USER_ID" property="id" jdbcType="INTEGER" />  
        <result column="USER_NAME" property="username" jdbcType="CHAR" />  
        <result column="USER_PASSWORD" property="password" jdbcType="CHAR" />  
        <result column="USER_EMAIL" property="email" jdbcType="CHAR" />  
    </resultMap>  
    
    <resultMap id="userMap" type="java.util.HashMap">
	    <id column="USER_ID" property="id" jdbcType="BIGINT" />
	    <result column="USER_NAME" property="username" jdbcType="VARCHAR" />
	    <result column="USER_PASSWORD" property="password" jdbcType="VARCHAR" />
	</resultMap>
	
	<resultMap id="userCount" type="java.util.HashMap">
	    <id column="USER_ID" property="id" jdbcType="BIGINT" />
	    <result column="USER_COUNT" jdbcType="INTEGER" />
	</resultMap>
	
    <!-- 查询单条记录 -->  
    <select id="getById" parameterType="int" resultMap="BaseResultMap">  
        SELECT * FROM t_user WHERE USER_ID = #{id}  
    </select>
    
    <select id="getAll" resultMap="userMap">  
        SELECT USER_ID,USER_NAME,USER_PASSWORD FROM t_user  
    </select> 
    
    <select id="getCount" resultMap="userCount">  
        SELECT USER_ID,count(0) USER_COUNT FROM t_user GROUP BY USER_ID
    </select> 
</mapper> 